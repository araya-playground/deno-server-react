{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable",
      "esnext"
    ],
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["client/", "server/", "tools/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["client/", "server/", "tools/"]
    },
    "options": {
      "lineWidth": 120,
      "indentWidth": 4,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
